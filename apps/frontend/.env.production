# Production environment configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Build optimizations
NEXT_OPTIMZE_CSS=true
NEXT_OPTIMIZE_FONTS=true
NEXT_OPTIMIZE_IMAGES=true

# Contract foundation integration
CONTRACT_REGISTRY_ENABLED=true
TYPESCRIPT_GENERATOR_ENABLED=true

# Performance monitoring
NEXT_PERFORMANCE_MONITORING=true
NEXT_WEB_VITALS_ATTRIBUTION=true

# Security headers
NEXT_SECURITY_HEADERS=true

# Bundle optimization
WEBPACK_OPTIMIZE_CHUNKS=true
WEBPACK_MINIMIZE=true

# Cache configuration
NEXT_CACHE_MAXAGE=31536000
NEXT_STATIC_CACHE=true

# API Configuration (to be set by deployment)
# NEXT_PUBLIC_API_URL=
# NEXT_PUBLIC_WS_URL=
# NEXT_PUBLIC_AUTH_URL=