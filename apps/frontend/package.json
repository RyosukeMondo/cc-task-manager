{
  "name": "@cc-task-manager/frontend",
  "version": "1.0.0",
  "description": "Next.js frontend application for CC Task Manager",
  "private": true,
  "scripts": {
    "dev": "pnpm build:packages:dev && next dev -p 3006",
    "dev:turbo": "pnpm build:packages:dev && TURBO=1 next dev --turbo",
    "dev:packages": "pnpm --filter '@cc-task-manager/types' --filter '@cc-task-manager/schemas' dev",
    "build": "pnpm build:packages && next build",
    "build:packages": "pnpm --filter '@cc-task-manager/types' --filter '@cc-task-manager/schemas' build",
    "build:packages:dev": "pnpm --silent --filter '@cc-task-manager/types' --filter '@cc-task-manager/schemas' build",
    "build:analyze": "pnpm build:packages && ANALYZE=true next build",
    "build:production": "pnpm build:packages && NODE_ENV=production next build",
    "build:incremental": "tsc --build",
    "start": "next start",
    "start:production": "NODE_ENV=production next start",
    "lint": "next lint",
    "lint:packages": "pnpm --filter '@cc-task-manager/types' --filter '@cc-task-manager/schemas' lint",
    "type-check": "tsc --noEmit",
    "type-check:packages": "pnpm --filter '@cc-task-manager/types' --filter '@cc-task-manager/schemas' type-check",
    "type-check:incremental": "tsc --build --dry",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "test:packages": "pnpm --filter '@cc-task-manager/types' --filter '@cc-task-manager/schemas' test",
    "clean": "rm -rf .next dist node_modules/.cache",
    "clean:packages": "pnpm --filter '@cc-task-manager/types' --filter '@cc-task-manager/schemas' clean",
    "clean:all": "pnpm clean && pnpm clean:packages",
    "docker:build": "docker build -t cc-task-manager-frontend .",
    "docker:build:prod": "docker build --target runner -t cc-task-manager-frontend:production .",
    "docker:run": "docker run -p 3000:3000 cc-task-manager-frontend",
    "docker:run:prod": "docker run -p 3000:3000 -e NODE_ENV=production cc-task-manager-frontend:production",
    "bundle-analyzer": "npm run build:analyze && open-cli .next/bundle-analyzer-report.html",
    "size-check": "next build && npx size-limit",
    "perf:audit": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "perf:measure": "next build && next start & sleep 5 && npm run perf:audit && kill %1",
    "workspace:status": "pnpm list --depth=0",
    "workspace:outdated": "pnpm outdated",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@cc-task-manager/schemas": "workspace:*",
    "@cc-task-manager/types": "workspace:*",
    "@hookform/resolvers": "^3.3.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-dropdown-menu": "^2.0.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.0",
    "@radix-ui/react-switch": "^1.0.0",
    "@radix-ui/react-toast": "^1.1.0",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-table": "^8.21.3",
    "autoprefixer": "^10.4.0",
    "chart.js": "^4.4.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "critters": "^0.0.25",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.365.0",
    "next": "^14.2.0",
    "next-pwa": "^5.6.0",
    "postcss": "^8.4.0",
    "react": "^18.3.0",
    "react-chartjs-2": "^5.2.0",
    "react-day-picker": "^9.11.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.51.0",
    "socket.io-client": "^4.7.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.0",
    "workbox-webpack-plugin": "^7.3.0",
    "zod": "^3.22.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.8.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^9.1.9",
    "@storybook/nextjs": "^9.1.9",
    "@storybook/react": "^9.1.9",
    "@storybook/test": "^8.6.14",
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.3.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.12.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-canvas-mock": "^2.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "size-limit": "^11.0.0",
    "storybook": "^9.1.9",
    "typescript": "^5.4.0",
    "webpack-bundle-analyzer": "^4.10.0"
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "size-limit": [
    {
      "name": "Client bundles (First Load JS)",
      "path": ".next/static/chunks/pages/**/*.js",
      "limit": "250 KB"
    },
    {
      "name": "All client bundles",
      "path": ".next/static/**/*.js",
      "limit": "500 KB"
    }
  ]
}