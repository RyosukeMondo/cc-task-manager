# CC Task Manager Backend Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=3001
HOST=localhost
APP_NAME=cc-task-manager-backend
APP_VERSION=1.0.0
API_PREFIX=api
API_VERSION=v1

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/cc_task_manager
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_TIMEOUT=30000
DATABASE_LOGGING=false
DATABASE_SSL=false

# =============================================================================
# REDIS (for queues and caching)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Primary JWT secret used by authentication (REQUIRED)
AUTH_JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-chars-change-in-production
AUTH_JWT_EXPIRES_IN=7d

# Legacy JWT config (kept for compatibility)
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=cc-task-manager
JWT_AUDIENCE=cc-task-manager-api

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_JSON=false
LOG_FILE_PATH=./logs/app.log
LOG_FILE_ROTATION=true
LOG_FILE_MAX_SIZE=10M
LOG_FILE_MAX_FILES=5
LOG_REQUESTS=false

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE UPLOAD
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain
UPLOAD_DIR=./uploads

# =============================================================================
# EMAIL (optional)
# =============================================================================
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=

# =============================================================================
# WEBSOCKET
# =============================================================================
WEBSOCKET_PORT=
WEBSOCKET_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# MONITORING
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=
ENABLE_HEALTH_CHECKS=true

# =============================================================================
# SECURITY
# =============================================================================
HTTPS_ONLY=false
SESSION_SECRET=
BCRYPT_ROUNDS=12
API_KEY=

# =============================================================================
# DEVELOPMENT
# =============================================================================
DEV_MODE=true
ENABLE_DOCS=true