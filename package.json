{
  "name": "cc-task-manager",
  "version": "1.0.0",
  "description": "Claude Code Task Manager - Worker system for Claude Code SDK integration",
  "main": "dist/main.js",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "nest build",
    "build:worker": "pnpm --filter @cc-task-manager/worker build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"apps/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:worker": "pnpm --filter @cc-task-manager/worker start",
    "start:worker:dev": "pnpm --filter @cc-task-manager/worker start:dev",
    "start:worker:prod": "pnpm --filter @cc-task-manager/worker start:prod",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:clean": "docker compose down -v",
    "db:migrate": "cd apps/backend && npx prisma migrate dev",
    "db:seed": "cd apps/backend && npx prisma db seed",
    "db:studio": "cd apps/backend && npx prisma studio",
    "dev": "npm run docker:up && pm2 start ecosystem.app.config.js",
    "dev:stop": "pm2 stop ecosystem.app.config.js && npm run docker:down",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:worker": "pnpm --filter @cc-task-manager/worker test",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:integration": "pnpm --filter @cc-task-manager/worker test:integration",
    "test:contract": "jest --config ./jest.contract.config.js",
    "contract": "ts-node scripts/contract-cli.ts",
    "worker:test": "bash apps/worker/scripts/run-worker-test.sh",
    "worker:test:bullmq": "node apps/worker/scripts/test-bullmq-worker.js",
    "generate:openapi": "tsx apps/backend/scripts/generate-openapi-spec.ts"
  },
  "dependencies": {
    "@nestjs/bullmq": "^10.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.4.2",
    "bullmq": "^4.0.0",
    "chokidar": "^3.5.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "commander": "^14.0.1",
    "js-yaml": "^4.1.0",
    "libphonenumber-js": "^1.12.23",
    "lodash-es": "^4.17.21",
    "nestjs-pino": "^4.4.1",
    "pino": "^8.15.0",
    "pino-http": "^10.5.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "9.0.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@pact-foundation/pact": "11.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/lodash-es": "^4.17.9",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "pnpm": {
    "overrides": {
      "uuid": "9.0.1"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "node_modules/(?!(lodash-es)/)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/../jest.setup.js"
    ]
  }
}
