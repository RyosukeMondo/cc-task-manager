{
  "name": "claude-code-specs-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Claude Code Specification System",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "build": "tsc",
    "clean": "rimraf dist coverage",
    "setup": "npm install && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "zod": "^3.22.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>"],
    "testMatch": [
      "**/__tests__/**/*.{ts,js}",
      "**/*.(test|spec).{ts,js}"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!jest.config.js",
      "!setup.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setup.ts"
    ],
    "testTimeout": 30000,
    "maxWorkers": "50%",
    "projects": [
      {
        "displayName": "Unit Tests",
        "testMatch": ["<rootDir>/unit/**/*.{test,spec}.{js,ts}"],
        "setupFilesAfterEnv": ["<rootDir>/setup.ts"]
      },
      {
        "displayName": "Integration Tests",
        "testMatch": ["<rootDir>/integration/**/*.{test,spec}.{js,ts}"],
        "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
        "testTimeout": 60000
      },
      {
        "displayName": "E2E Tests",
        "testMatch": ["<rootDir>/e2e/**/*.{test,spec}.{js,ts}"],
        "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
        "testTimeout": 120000
      }
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off"
    },
    "env": {
      "node": true,
      "jest": true,
      "es2022": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}